<!DOCTYPE html>
<html>
  <head>
    <title>Nimble</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container-fluid">
    <div class="row">
      <p id="notice"><%= notice %></p>
      <%= yield %>
      <%= link_to 'Sign Out', destroy_user_session_path, method: :delete, data: { confirm: 'Logout?' }, class: 'btn btn-danger' %>
    </div>
    </div>
  </body>
</html>
